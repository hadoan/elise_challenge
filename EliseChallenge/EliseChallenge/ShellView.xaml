<Window x:Class="EliseChallenge.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Elise Challenge"
        Height="600" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >

    <Grid Background="White">

        <StackPanel HorizontalAlignment="Left"  Width="600" Margin="100,100,0,100" VerticalAlignment="Top" >
            <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}">My Slider</TextBlock>
           <Slider Minimum="{Binding Minimum}" Maximum="{Binding Maximum}" Value="{Binding Value}" Margin="0,10,0,0"/>
            <Button Content="Slide Settings" x:Name="ShowSettings" Margin="0,10,0,10"  Width="150"/>
        </StackPanel>
    </Grid>

</Window>